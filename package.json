{
  "name": "luca-ds",
  "version": "1.0.0",
  "description": "A modern UI component library built with React, TypeScript, and Tailwind CSS",
  "type": "module",
  "main": "./dist/luca-ds.umd.cjs",
  "module": "./dist/luca-ds.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/luca-ds.js",
      "require": "./dist/luca-ds.umd.cjs"
    },
    "./styles.css": "./dist/style.css",
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "watch:css": "tailwindcss -c tailwind.config.js -i src/styles.css -o dist/style.css --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -o docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luca-edu/luca-ds.git"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwind",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/luca-edu/luca-ds/issues"
  },
  "homepage": "https://github.com/luca-edu/luca-ds#readme",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^10.0.5",
    "@storybook/addon-onboarding": "^10.0.5",
    "@storybook/react-vite": "^10.0.5",
    "@types/node": "^24.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "storybook": "^10.0.5",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^7.2.1",
    "vite-plugin-dts": "^4.3.0"
  },
  "dependencies": {
    "antd": "^5.28.0",
    "rc-virtual-list": "^3.11.1",
    "@ant-design/icons": "^5.0.1",
    "antd-style": "^3.7.1",
    "clsx": "^2.1.1"
  }
}
