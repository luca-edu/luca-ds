{
  "name": "luca-ui-kit",
  "version": "1.0.0",
  "description": "A modern UI component library built with React, TypeScript, and Tailwind CSS",
  "type": "module",
  "main": "./dist/luca-ui-kit.umd.cjs",
  "module": "./dist/luca-ui-kit.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/luca-ui-kit.js",
      "require": "./dist/luca-ui-kit.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/style.css"
    ,"./dist/*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "watch:css": "tailwindcss -c tailwind.config.js -i src/styles.css -o dist/style.css --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luca-edu/luca-ui-kit.git"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwind",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/luca-edu/luca-ui-kit/issues"
  },
  "homepage": "https://github.com/luca-edu/luca-ui-kit#readme",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^10.0.5",
    "@storybook/addon-onboarding": "^10.0.5",
    "@storybook/react-vite": "^10.0.5",
    "@types/node": "^24.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "storybook": "^10.0.5",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.3.0"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  }
}
